<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YouWatchStudio.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YouWatchStudio"
    Shell.FlyoutBehavior="Disabled"
    Title="YouWatchStudio">

    <!-- Página inicial - Dashboard -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:Pages.DashboardPage}"
        Route="DashboardPage" />

    <!-- Página de Upload de Conteúdo -->
    <ShellContent
        Title="Upload"
        ContentTemplate="{DataTemplate local:Pages.UploadPage}"
        Route="UploadPage" />

    <!-- Página de Gerenciamento de Conteúdo -->
    <ShellContent
        Title="Conteúdos"
        ContentTemplate="{DataTemplate local:Pages.ContentManagementPage}"
        Route="ContentManagementPage" />

    <!-- Página de Métricas de Desempenho -->
    <ShellContent
        Title="Métricas"
        ContentTemplate="{DataTemplate local:Pages.MetricsPage}"
        Route="MetricsPage" />

</Shell>

